  <div class="grid">
  <body onload="removeElement()">
    <div class="image">    
      <form method="post" action="game">
    <%max_num%>
    <% max_num = board.board.size.to_i - 1%>
     <center>
            <font color="#000"><h3> Row coordinate</h3></font>
                <input type="number" name="row" autofocus placeholder="Row" min="0" max="<%= max_num %>">
                 <font color="#000"><h3>Column coordinate</h3></font>
                <input type="number" name="col" placeholder="Column" min="0" max="<%= max_num %>">
                 <font id="HV" color="#000"><h3>Horizontal or Vertical</h3></font>
                <input type="text" name="pos" placeholder="Horizontal or Vertical"/>
                <input type='hidden' name='ship_num' value='<%=ship_num%>' id="ship_num">
                <font color="#000"><h1><%=err%></h1></font>
                <br><br>
                <button class=" button">Enter</button>
         

            </center>
        </form>
   </div>
           <div align="center" class="nav"> 
                       <h2>Player Board</h2>
           <table id="mytable">
                <tr>
                <th> </th>
                <%board.board.size.times do |v|%>
                <th><%=v%></th>
                <%end%>
                </tr>
           
                <%board.board.each_with_index do |v, i|%>
                    <tr>
                    <th><%=i%></th>
                        <%v.each_with_index do |k, o|%>
                            <th><%=k%></th>
                        <%end%>
                    </tr>
                <%end%>    

            </table>     
            </div>     

            <div class="content" align="center">
            <h2>CPU Board</h2>
            <table id="cputable">
                <tr>
                <th> </th>
                <%cpuboard.board.size.times do |v|%>
                <th><%=v%></th>
                <%end%>
                </tr>
           
                <%cpuboard.board.each_with_index do |v, i|%>
                    <tr>
                    <th><%=i%></th>
                        <%v.each_with_index do |k, o|%>
                            <th><%=k%></th>
                        <%end%>
                    </tr>
                <%end%>    
            </table>            
</div>


